# 应用配置
APP_NAME=Edusched
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# 服务配置
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 多租户配置
MULTI_TENANT=true
DEFAULT_TENANT=default

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=edusched
DB_USER=edusched
DB_PASSWORD=edusched123
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_ECHO=false

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# 安全配置
SECURITY_SECRET_KEY=your-super-secret-key-here-make-it-long-enough-for-production
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7

# OIDC配置
OIDC_ISSUER=http://localhost:8080/auth/realms/edusched
OIDC_CLIENT_ID=edusched-client
OIDC_CLIENT_SECRET=edusched-secret
OIDC_AUDIENCE=
OIDC_SCOPES=["openid", "profile", "email"]

# 调度引擎配置
SCHEDULING_WORKER_COUNT=2
SCHEDULING_MAX_ITERATIONS=1000
SCHEDULING_TIMEOUT_SECONDS=300
SCHEDULING_CHECKPOINT_INTERVAL=50

# 可观测性配置
OBSERVABILITY_LOG_LEVEL=INFO
OBSERVABILITY_SENTRY_DSN=
OBSERVABILITY_PROMETHEUS_ENABLED=true
OBSERVABILITY_TRACING_ENABLED=true
OBSERVABILITY_OTLP_ENDPOINT=